<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/bodyRelative"
    android:clickable="true"
    >

    <ImageView
        android:id="@+id/materiaImagenFRMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_pensum_01" />

    <TextView
        android:id="@+id/materiaTituFRMM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.87"
        android:gravity="left"
        android:padding="4dp"
        android:text="Ingenieria Sistemas"
        android:textSize="22sp"
        android:textColor="@color/colorTextPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/materiaImagenFRMM"
        android:layout_toRightOf="@+id/materiaImagenFRMM"
        android:layout_toEndOf="@+id/materiaImagenFRMM" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/materiaSubTituloFRMM"
        android:layout_below="@+id/materiaTituFRMM"
        android:layout_toRightOf="@+id/materiaImagenFRMM"
        android:layout_toEndOf="@+id/materiaImagenFRMM" />

</RelativeLayout>